			"name": "Query Closing",
			"item": [
				{
					"name": "Get Borrowers",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"const jsonData = pm.response.json();",
									"// this is the URL that you want user to redirect to after borrower finish esigning and click the \"back to dashboard\"",
									"const posDashboardUrl = \"https://www.google.com\"",
									"",
									"for (i in jsonData.borrowers) {",
									"    let borrower = jsonData.borrowers[i]",
									"    borrowerAccessToken = borrower.access_token",
									"    previewUrl = pm.collectionVariables.get(\"BaseUrl\").replace(\"api\", \"app\") + \"/secure_access?secure_token=\"+ borrowerAccessToken + \"&act=preview&redirect_url=\" + posDashboardUrl",
									"    console.log('url for ' + borrower.first_name+' to preview ' + previewUrl)",
									"}",
									""
								],
								"type": "text/javascript"
							}
						}
